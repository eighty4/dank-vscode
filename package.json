{
    "publisher": "eighty4tech",
    "name": "dank-vscode",
    "displayName": "DANK",
    "version": "0.0.4",
    "private": true,
    "author": "Adam McKee Bennett <adam.be.g84d@gmail.com>",
    "repository": "https://github.com/eighty4/dank-vscode",
    "license": "MIT",
    "type": "module",
    "description": "Support for DANK website development with @eighty4/dank",
    "icon": "docs/icon-256.png",
    "galleryBanner": {
        "color": "#5e5",
        "theme": "light"
    },
    "keywords": [
        "frontend",
        "bundler",
        "esbuild",
        "dank",
        "webdev",
        "web",
        "website",
        "fullstack",
        "cdn"
    ],
    "packageManager": "pnpm@10.28.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/dank.config.{js,ts}"
    ],
    "contributes": {
        "commands": []
    },
    "main": "./lib_js/extension.js",
    "scripts": {
        "build": "tsc && node esbuild.js",
        "build:test": "pnpm build && tsc -p tsconfig.test.json",
        "build:release": "pnpm build --production",
        "fmt": "prettier --write .",
        "fmtcheck": "prettier --check .",
        "test": "vscode-test",
        "typecheck": "tsc",
        "vscode:prepublish": "pnpm build:release"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.74.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.2",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3"
    }
}
